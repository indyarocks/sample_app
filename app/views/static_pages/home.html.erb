<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
    <div class="center hero-unit">
      <h1>Sample App</h1>

      <h2>
        This is the the space for my experiments in RoR.
        <a href="http://blog.chandanj.com" target="_blank">My Personal Blog</a>,
        <a href="http://chandanj.com/" target="_blank">My Site in beta phase</a>,
      </h2>
      <% unless signed_in? %>
          <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
      <% end %>

    </div>

    <%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/'%>
<% end %>

